---
import { Image } from 'astro:assets';

import Base from '../layouts/Base.astro';

import windowsLogo from '../images/platforms/windows.svg';
import macosLogo from '../images/platforms/macos.svg';
import linuxLogo from '../images/platforms/linux.svg';

const width = 150;
---

<Base pageTitle="Download">
  <section class="content container has-text-centered">
    <h2>Download the software</h2>
    
    <p>Here you can download the latest version of wiRedPanda binaries for:</p>

    <div class="is-flex is-justify-content-space-around">
      <div>
        <a class="is-flex is-flex-direction-column" href="https://github.com/GIBIS-UNIFESP/wiRedPanda/releases/download/v4.1.12/WiRedPanda-Windows-Qt5-Portable.zip">
          <Image src={windowsLogo} alt="Windows button to download" width={width} class="jello-diagonal-1" />
          <span>Windows</span>
        </a>
      </div>
      <div>
        <a class="is-flex is-flex-direction-column" href="https://github.com/GIBIS-UNIFESP/wiRedPanda/releases/download/v4.1.12/WiRedPanda-Ubuntu-Qt5.AppImage">
          <Image src={linuxLogo} alt="Linux button to download" width={width} class="jello-diagonal-1"/>
          <span>Linux</span>
        </a>
      </div>
      <div>
        <a class="is-flex is-flex-direction-column" href="https://github.com/GIBIS-UNIFESP/wiRedPanda/releases/download/v4.1.12/WiRedPanda-macOS-Qt5.dmg">
          <Image src={macosLogo} alt="MacOS button to download" width={width} class="jello-diagonal-1"/>
          <span>Mac OS</span>
        </a>
      </div>
    </div>
  </section>
</Base>
