---
import { Image } from "astro:assets";

import unifespLogo from '../images/unifesp.png';
import gibisLogo from '../images/gibis.png';
---

<footer>
  <a href="https://www.unifesp.br/" target="_blank">
    <Image src={unifespLogo} alt="Unifesp logo" width={125} />
  </a>
  <span>wiRedPanda Team &copy; { new Date().getFullYear() }</span>
  <a href="http://gibis.unifesp.br/" target="_blank">
    <Image src={gibisLogo} alt="GIBIS logo" width={125} />
  </a>
</footer>


<style>
footer {
  display: flex;  
  align-items: center;
  justify-content: space-around;
  background-color: #2290EF;
  padding: 10px;
  margin-top: 20px;

  color: white;
  font-weight: 500;
}
</style>
